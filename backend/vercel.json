{
  "version": 2,
  "installCommand": "npm install --prefix backend",
  "buildCommand": "npm run build --prefix backend",
  "functions": {
    "backend/src/index.ts": {
      "runtime": "@vercel/node@3.0.0",
      "includeFiles": "backend/dist/**"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/index.ts"
    }
  ]
}